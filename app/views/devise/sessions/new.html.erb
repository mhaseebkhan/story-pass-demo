<div class="form-devise">
    <h2 class="form-devise-heading">Sign in</h2>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      <%= f.email_field :email, :class => 'input-block-level', :placeholder =>"Email Address", :autofocus => true %>

      <%= f.password_field :password, :class => 'input-block-level', :placeholder =>"Password" %>

      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% end -%>

      <%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
